{
  "name": "flatball-chatbot",
  "version": "1.0.0",
  "description": "A RAG chatbot for frisbee aerodynamics using local LLMs.",
  "main": "chatbot.py",
  "scripts": {
    "postinstall": "python -m venv chat\\.venv",
    "setup": "chat\\.venv\\Scripts\\pip.exe install -r chat\\requirements.txt",
	"FritzB": "python .\\FritzB.py",
    "start": "cd chat && start http://127.0.0.1:8000 && .\\.venv\\Scripts\\uvicorn.exe api:app --reload",
    "start:log": "npm start > .log\\start-error.log 2>&1",
    "db:ingest": "chat\\.venv\\Scripts\\python.exe chat\\chatbot.py",
    "db:rebuild": "chat\\.venv\\Scripts\\python.exe chat\\chatbot.py --clean",
    "download:models": "ollama pull nomic-embed-text && ollama pull llama3:8b",
    "env": "cmd /k chat\\.venv\\Scripts\\activate.bat"
  },
  "keywords": [
    "rag",
    "chatbot",
    "llm",
    "ollama",
    "langchain",
    "python"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
